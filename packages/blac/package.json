  "main": "src/index.ts",
  "module": "src/index.ts",
  "typings": "src/index.ts",
  "types": "src/index.ts",
  "keywords": [
    "react",
    "typescript",
    "rxjs",
    "state-management",
    "reactjs",
    "observer-pattern",
    "bloc",
